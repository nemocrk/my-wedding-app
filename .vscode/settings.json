{
  // Python Configuration
  "remote.extensionKind": {
    "Continue.continue": [
      "workspace"
    ],
    "pub.name": [
      "ui"
    ]
  },
  "python-env.workspaceSearchPaths": [
    "./backend",
    "./backend/.venv",
    "./backend/",
  ],
  "python.useEnvironmentsExtension": true,
  "python.testing.pytestEnabled": true,
  "python-envs.pythonProjects": [
    {
      "path": "backend",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ],
  "python.testing.pytestArgs": [
    "."
  ],
  "python.testing.unittestEnabled": false,
  "python.defaultInterpreterPath": "backend/.venv/bin/python",
  "python.analysis.extraPaths": [
    "backend"
  ],
  "python.analysis.autoImportCompletions": true,
  // Linting & Formatting
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  // Django Support
  "files.associations": {
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*.txt": "django-txt"
  },
  // Auto-save per hot reload
  "files.autoSave": "onFocusChange",
  // Exclude from search
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/staticfiles": true,
    "**/media": true,
    "**/*.pyc": true
  },
  // File watcher exclusions (performance)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true
  },
  // Terminal
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",
  // Docker
  "docker.containers.groupBy": "Compose Project Name",
  "docker.containers.description": [
    "ContainerName",
    "Status"
  ],
  // Editor
  "editor.formatOnSave": true,
  "editor.rulers": [
    88,
    120
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Git
  "git.ignoreLimitWarning": true,
  // Exclude from file explorer
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true
  },
  "git.autofetch": true,
  "git.autoStash": true,
  "git.branchProtection": [
    "main"
  ],
  "git.fetchOnPull": true,
  "git.postCommitCommand": "push",
  "git.pruneOnFetch": true,
  "git.pullBeforeCheckout": true,
  "git.showPushSuccessNotification": true,
  "git.timeline.showUncommitted": true,
  "git.useCommitInputAsStashMessage": true,
  "containers.containers.groupBy": "Compose Project Name",
  "containers.containers.description": [
    "ContainerName",
    "Status"
  ]
}
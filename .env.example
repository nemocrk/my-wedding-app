# ==============================================
# ENVIRONMENT VARIABLES - Wedding App
# ==============================================
# Copia questo file in .env e configura i valori
# NON committare mai il file .env nel repository!

# ==============================================
# BUILD CONFIGURATION
# ==============================================
# Valori possibili: development | production
BUILD_TARGET=production

# ==============================================
# DATABASE
# ==============================================
DB_PASSWORD=changeme_in_production

# ==============================================
# DJANGO BACKEND
# ==============================================
# Genera un secret key sicuro con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=dev-secret-key-CHANGE-THIS-IN-PRODUCTION

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Debug mode (NEVER use True in production!)
DEBUG=False

# ==============================================
# FRONTEND USER (Public Internet)
# ==============================================
# URL base per le chiamate API dal frontend pubblico
REACT_APP_API_URL=http://localhost/api

# Per produzione con dominio:
# REACT_APP_API_URL=https://yourdomain.com/api

# ==============================================
# FRONTEND ADMIN (Intranet)
# ==============================================
# URL base per le chiamate API dal frontend admin
REACT_APP_ADMIN_API_URL=http://localhost:8080/api

# Per accesso remoto via SSH tunnel:
# REACT_APP_ADMIN_API_URL=http://localhost:8080/api

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================
# Decommenta per development mode
# BUILD_TARGET=development
# DEBUG=True
# ALLOWED_HOSTS=*
